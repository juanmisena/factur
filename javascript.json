	"express":{
		"prefix": "express",
		"body": [
			"const express = require('express');",
			"const bodyParser = require('body-parser');",
			"const app = express();",
			"// parse application/x-www-form-urlencoded",
			"app.use(bodyParser.urlencoded({ extended: false }));",
			"// parse application/json",
			"app.use(bodyParser.json());",
			"// port the server at http://localhost",
			"const port = process.env.PORT || 3000;",
			"//routes the server",
			"app.get('/', (req, res) => {",
				"res.send('Hello Word!');",
			"});",
			"//listen on port",
			"app.listen(port, () => {",
				"console.log(`listener in the ${}`);",
			"});"
		],
		"description": "llamando al server"
	},
	"mysql":{
		"prefix": "mysql",
		"body": [
			"var mysql = require('mysql');",
			"var connection = mysql.createConnection({",
				"host: '',",
				"username: '',",
				"password: '',",
				"database: ''});",
			"connection.connect();",
			"var sql = 'SELECT * FROM DUAL';",
			"connection.query(sql,function(error,results,fields){",
				"if(error) throw error;",
				"console.log(results);",
				"});",
			"connection.end();"
		],
		"description": "conexion a base database"
	},
	"block of comment":{
		"prefix": "blo",
		"body": "$BLOCK_COMMENT_START  $BLOCK_COMMENT_END"
	},
	"lines of comment":{
		"prefix": "lin",
		"body": "$LINE_COMMENT "
	},
	"out is window":{
		"prefix": "wr",
